/* components/select/index.wxss */
.com-selectBox{
    width: 140rpx;
    color: #999BA0;
    font-size: 36rpx;
}
.com-sContent{
    font-size: 12px;
    position: relative;
    height: 30px;
    line-height: 30px;
}
.com-sContent .com-sImg{
    position: absolute;
    right: 0;
    top: 50%;
    width: 9px;
    height: 9px;
    margin-top: -4px;
    transition: all .3s ease;
}
.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    /* padding:0 18px 0 6px; */
    font-size: 24rpx;
    text-align:center;
}
.com-sList{
    width: inherit;
    position: absolute;
    text-align: center;
    box-sizing: border-box;
    background:rgba(255,255,255,1);
    box-shadow:0px 4px 8px 0px rgba(22,22,22,0.2);
    border-radius:2px;
    z-index: 3;
    max-height: 80px;
    overflow: auto;
}
.com-sItem{
    height: 30rpx;
    line-height: 30rpx;
    padding: 0 6px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 20rpx;
}
.com-sItem.cur{
    color: white;
    background-color: #F6DD8D

}