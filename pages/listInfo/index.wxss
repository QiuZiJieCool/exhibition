page{
  background-color: #FAFAFA;
}
.banner {
  position: relative;
}
.contain {
}
swiper {
  width: 500rpx;
  height: 250rpx;
  margin:  50rpx auto 42rpx;
}
.img {
  width: 100%;
  height: 100%;
}
.sub {
  width: 24rpx;
  height: 50rpx;
  position: absolute;
}
.icon-left {
  left:50rpx;
  top:50%;
}
.icon-right {
  right:50rpx;
    top:50%;
}
.itemInfo {
  padding: 0 60rpx;
}
.title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #080808;
  font-family:Microsoft YaHei;
}
.icon {
  width: 150rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.icon image {
  width: 30rpx;
  height: 32rpx;
}
.dynasty {
  margin-top: 20rpx;
  font-size: 18rpx;
  color: #353535;
}
.itemDesc {
  margin-top:18rpx;
  font-size: 18rpx;
  display: flex;
  flex-direction: column;
}
.itemDescInfo {
  font-size: 17rpx;
  color:#888888;
  margin-top: 14rpx;
  text-indent: 2em;
  font-family:Microsoft YaHei;
  font-weight:400;
  line-height:30rpx;
}
.video {
  width: 500rpx;
  height: 200rpx;
  margin: 20rpx auto;
}
.video video{
  width: 100%;
  height: 100%;
}
.comment {
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  min-height: 300rpx;
}
.head {
  padding: 15rpx 60rpx 0 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  font-weight:400;
}
.head>text {
  color: #353535;
  font-family:Microsoft YaHei;
}
.icon1 {
  display: flex;
  width: 140rpx;
}
.icon1 image {
  width: 30rpx;
  height: 32rpx;
  margin-right: 15rpx;
}
.icon1 text {
 color: #FCCC91;
}
.commentInfo {
  margin-top: 15rpx;
  padding: 0 30rpx;
}
.item {
  border-bottom: 1px solid #F8F8F8;
  padding: 15rpx 0;
}
.item-t {
  display: flex;
  align-items: center;
}
.item-t image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 8rpx;
}
.item-b {
  font-size: 16rpx;
  color: #888888;
  margin-left: 43rpx;
  margin-top: 10rpx;
}
.nickName {
color: #353535;
font-size: 18rpx;
font-family:Microsoft YaHei;
font-weight:400;
}
.input-section {
  border: 1rpx solid #FDDBB0;
  border-radius: 10rpx;
  padding: 10rpx 0;
  position: relative;
  width:710rpx;
  margin: 0 auto;
  height: 28rpx;
  font-size: 18rpx;
}
.input-section input {
  position: absolute;
  top: 0;
  left:16rpx;
  width: 620rpx;
  height: 100%;
}
.confirm1{
  width: 72rpx;
  height: 40rpx;
  position: absolute;
  top: 4rpx;
  right: 8rpx;
  font-size:18rpx;
  line-height: 40rpx;
  background-color: #FDDBB0;
  text-align: center;
  color: white;
  border-radius: 5rpx;
}
.feedbook {
  position: fixed;
  bottom: 180rpx;
  width: 680rpx;
  margin: 0 auto;
  height: 60rpx;
  border: 1rpx solid #fde5c8;
  border-radius: 15rpx;
}

.success {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -16rpx;
}

.placeholder {
  font-size: 22rpx;
  color: #b2b2b2;
  padding-left: 30rpx;
  line-height: 1.2rem;
}

.feedbook input {
  padding-left: 20rpx;
  font-size: 22rpx;
  width: 500rpx;
  border-left: 1rpx solid #fde5c8;
  border-right: 1rpx solid #fde5c8;
  min-height: 1.2rem;
  height: 1.2rem;
  position: absolute;
  left: 70rpx;
  top: 10rpx;
}
.send {
  position: absolute;
  right:  20rpx;
  color: #fde5c8;
  font-size: 22rpx;
  top: 10rpx;
}
