/* pages/museum/index.wxss */

.top {
  display: flex;
  width: 500rpx;
  margin: 10rpx auto;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #ccc;
}

.top text {
  padding-bottom: 15rpx;
}

.content {
  background-color: #fcfcfc;
  padding: 0 30rpx;
  margin-bottom: 150rpx;
}

.ad {
  width: 710rpx;
  height: 250rpx;
}

.current {
  border-bottom: 1rpx solid #fccc91;
  color: black;
}

.suggest {
  width: 640rpx;
  height: 240rpx;
  border-radius: 15rpx;
  border: 1rpx solid #fff;
  margin-top: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 22rpx;
}

.suggest text {
  line-height: 40rpx;
}

.info {
  display: block;
  text-indent: 2em;
}

.call {
  width: 220rpx;
  height: 50rpx;
  margin: 20rpx auto;
  position: relative;
}

.radius {
  width: 100%;
  height: 100%;
}

.phone {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 50%;
  margin-top: -12rpx;
  left: 20rpx;
}

.phoneNum {
  position: absolute;
  top: 6rpx;
  left: 50rpx;
}

.feedbook {
  position: fixed;
  bottom: 180rpx;
  width: 680rpx;
  margin: 0 auto;
  height: 60rpx;
  border: 1rpx solid #fde5c8;
  border-radius: 15rpx;
}

.success {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -16rpx;
}

.placeholder {
  font-size: 22rpx;
  color: #b2b2b2;
  padding-left: 30rpx;
  line-height: 1.2rem;
}

.feedbook input {
  padding-left: 20rpx;
  font-size: 22rpx;
  width: 500rpx;
  border-left: 1rpx solid #fde5c8;
  border-right: 1rpx solid #fde5c8;
  min-height: 1.2rem;
  height: 1.2rem;
  position: absolute;
  left: 70rpx;
  top: 10rpx;
}
.send {
  position: absolute;
  right:  20rpx;
  color: #fde5c8;
  font-size: 22rpx;
  top: 15rpx;
}
