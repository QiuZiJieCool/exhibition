<!--pages/travel_my/travel_my.wxml-->
<import src="/tabbar-template/index.wxml" />
<template is="tabBar" data="{{tabBar:bindData.tabBar}}" />
<!--pages/user/index.wxml-->
<view class="user">
  <image src='{{userInfo.avatarUrl}}' />
  <text class="nickName"> {{userInfo.nickName}}</text>
</view>
<view class="ad">
  <image class="left" src="/assets/user_left.png"></image>
  <image class="middle" src="/assets/user_ad.png"></image>
  <image class="right" src="/assets/user_right.png"></image>
</view>
<view class="about">
  <view class="item" bindtap="toTrack">
    <image class="item-left" src="/assets/item2.png" />
    <text>我的足迹</text>
    <image class="item-right" src="/assets/_right.png" />
  </view>
  <view class="item" bindtap="toMuseum">
    <image class="item-left" src="/assets/item1.png" />
    <text>关于博物馆</text>
    <image class="item-right" src="/assets/_right.png" />
  </view>
  <view class="item" bindtap="toVoluntary">
    <image class="item-left" src="/assets/item3.png" />
    <text>志愿者服务</text>
    <image class="item-right" src="/assets/_right.png" />
  </view>
</view>