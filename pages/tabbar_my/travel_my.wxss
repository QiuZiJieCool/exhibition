/* pages/user/index.wxss */

.user {
  margin-top: 90rpx;
}

.user image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 120rpx;
  vertical-align: middle;
}

.nickName {
  margin-left: 24rpx;
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
}

.ad {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left, .right {
  width: 20rpx;
  height: 180rpx;
}

.middle {
  width: 678rpx;
  height: 200rpx;
}

.about {
  margin:50rpx 20rpx 0;
}

.item {
  font-size: 20rpx;
  padding: 0 22rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0 2rpx 40rpx 0 rgba(162,137,63,0.1);
  border-radius:10rpx;
}

.item-left {
  width: 45rpx;
  height: 45rpx;
  margin-right: 36rpx;
}

.item-right {
  width: 18rpx;
  height: 30rpx;
  position: absolute;
  right:20rpx;
}

.item text {
  font-size: 28rpx;
}
